		<!-- 全局异常 -->
		<global-exception-mappings>
			<!-- result 会取找全局视图的名称 -->
			<exception-mapping result="null" exception="java.lang.NullPointerException"></exception-mapping>
			<exception-mapping result="error" exception="java.lang.Exception"></exception-mapping>
		</global-exception-mappings>
		

		<!-- Ation实例交给spring容器创建 -->
		<action name="register" class="main.action.RegisterAction" method="register">
			<!-- 限制运行上传的文件的类型及大小 -->
			<interceptor-ref name="defaultStack">
				<param name="fileUpload.allowedExtensions">jpg,png,bmp,x-png,gif,jpeg</param>
				<param name="maximumSize">2M</param>
				<!-- 限制运行的类型   【与上面同时使用，取交集】
				<param name="fileUpload.allowedTypes">text/plain</param>
				-->
			</interceptor-ref>
		</action>

		
